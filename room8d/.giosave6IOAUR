upstream django {
    server unix:///home/michlen/room8d/room8d.sock; # взаимодействие с uwsgi через Unix-сокет (мы воспользуемся этим вариантом позже) 
    #server 127.0.0.1:8001; # взаимодействие с uwsgi через веб-порт 
}

server {
    listen 80;
    listen [::]:80;
    
    # доменное имя
    server_name     flatm8.ru; # замените на собственный домен или IP адрес
    charset     utf-8;
    client_max_body_size 40M;  

    location /.well-known {
		    alias /var/www/example/.well-known;
	    }
	location / {
		    proxy_pass http://127.0.0.1:8000;
		    proxy_set_header Host $server_name;
		    proxy_set_header X-Real-IP $remote_addr;
		    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
	    }
    location /media  {
        alias /home/michlen/room8d/media;  # расположение медиафайлов (при необходимости измените)
    }

    location /static {
        alias /home/michlen/room8d/static;  # расположение статики (при необходимости измените)

    }

    # Остальные запросы перенаправляются в Django приложение
    location / {
        uwsgi_pass  django;
        include     /home/michlen/room8d/uwsgi_params; # файл uwsgi_params, который мы только что взяли с github
    }
}
